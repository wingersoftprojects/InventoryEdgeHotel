<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://xmlns.jcp.org/jsf/html"
      xmlns:f="http://xmlns.jcp.org/jsf/core"
      xmlns:ui="http://xmlns.jcp.org/jsf/facelets">
    <h:head>
        <title>ConfigFile</title>
        <script  language="javascript">
            function confirmDelete()
            {
                return confirm('Are you sure you want to delete this current record?');
            }
            function alertSave()
            {
                return alert('Record saved successfully!');
            }
        </script> 
    </h:head>
    <f:event listener="#{configBean.getConfigFileToConfig(config)}" type="preRenderView" />
    <h:body>
        <h:form id="config_file">

            <h:panelGrid columns="1">
                <h:outputLabel styleClass="clsLabelTop" id="olblcategoryHeader" value="CONFIG.FILE SETTINGS"/>
            </h:panelGrid>

            <h:panelGrid styleClass="clsGridMainInput" columns="2">
                <h:outputLabel value="Location"/>
                <h:inputText style="width: 400px;" id="location" value="#{config.location}" required="true" autocomplete="off"/>
                <h:outputLabel value=""/>
                <h:outputLabel value=""/>
                <h:outputLabel value=""/>
                <h:outputLabel value=""/>
                <h:outputLabel value=""/>
                <h:outputLabel value=""/>
                <h:outputLabel value="Branch Host"/>
                <h:inputText style="width: 400px;" id="branch_host" value="#{config.branch_host}" required="true" autocomplete="off"/>

                <h:outputLabel value="Branch Database"/>
                <h:inputText style="width: 400px;" id="branch_database" value="#{config.branch_database}"  required="true" autocomplete="off" />

                <h:outputLabel value="Branch User"/>
                <h:inputText style="width: 400px;" id="branch_user" value="#{config.branch_user}"  required="true" autocomplete="off" />

                <h:outputLabel value="Branch Password"/>
                <h:inputText style="width: 400px;" id="branch_password" value="#{config.branch_password}"  required="true" autocomplete="off"/>
                <h:outputLabel value=""/>
                <h:outputLabel value=""/>
                <h:outputLabel value=""/>
                <h:outputLabel value=""/>
                <h:outputLabel value=""/>
                <h:outputLabel value=""/>
                <h:outputLabel value="Inter-Branch Host"/>
                <h:inputText style="width: 400px;" id="inter_branch_host" value="#{config.inter_branch_host}" required="true" autocomplete="off"/>

                <h:outputLabel value="Inter-Branch Database"/>
                <h:inputText style="width: 400px;" id="inter_branch_database" value="#{config.inter_branch_database}"  required="true" autocomplete="off" />

                <h:outputLabel value="Inter-Branch User"/>
                <h:inputText style="width: 400px;" id="inter_branch_user" value="#{config.inter_branch_user}"  required="true" autocomplete="off" />

                <h:outputLabel value="Inter-Branch Password"/>
                <h:inputText style="width: 400px;" id="inter_branch_password" value="#{config.inter_branch_password}"  required="true" autocomplete="off"/>
                <h:outputLabel value=""/>
                <h:outputLabel value=""/>
                <h:outputLabel value=""/>
                <h:outputLabel value=""/>
                <h:outputLabel value=""/>
                <h:outputLabel value=""/>
                <h:outputLabel value="License Key"/>
                <h:inputText style="width: 1400px;" id="license_key" value="#{config.license_key}" required="true" autocomplete="off"/>

            </h:panelGrid>

            <h:panelGrid columns="1">
                <h:commandButton id="cmdbUpdate" value="UPDATE">
                    <f:actionListener binding="#{configBean.updateConfigFile(config)}" />
                </h:commandButton>
            </h:panelGrid>

            <h:panelGrid columns="1">
                <h:outputLabel id="olblActionMessage" value="#{configBean.actionMessage}"/>
                <h:messages id="msgsMainMessage" style="color: red"/><br/>
            </h:panelGrid>

        </h:form>
    </h:body>
</html>

