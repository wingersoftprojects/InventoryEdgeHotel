<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://xmlns.jcp.org/jsf/html"
      xmlns:f="http://xmlns.jcp.org/jsf/core"
      xmlns:ui="http://xmlns.jcp.org/jsf/facelets">
    <h:head>
        <title>My Account</title>
        <link rel="stylesheet" type="text/css" href="style.css"/>
        <script  language="javascript">
            function confirmDelete()
            {
                return confirm('Are you sure you want to delete this current record?');
            }
            function alertSave()
            {
                return alert('Record saved successfully!');
            }
        </script> 
    </h:head>
    <f:event listener="#{navigationBean.checkAccessDeniedHome()}" type="preRenderView" />
    <h:body>
        <ui:include src="Menu.xhtml"/>
        <h:form id="form" styleClass="clsMainFrom">

            <h:panelGrid styleClass="clsGridMainHeader" columns="1">
                <h:outputLabel styleClass="clsLabelTop" id="olblcategoryHeader" value="My Account Details"/>
            </h:panelGrid>

            <h:panelGrid styleClass="clsGridMainInput" columns="2">
                <h:outputLabel styleClass="clsLabel" value="Username:"/>
                <h:inputText styleClass="clsInput" id="itxtUserName" value="#{generalUserSetting.getCurrentUser().userName}" disabled="true">
                </h:inputText>
                
                <h:outputLabel styleClass="clsLabel" value="User Account Names:"/>
                <h:inputText styleClass="clsInput" id="itxtNames" value="#{generalUserSetting.getCurrentUserNames()}" disabled="true">
                </h:inputText>
            </h:panelGrid>
            
            <h:panelGrid styleClass="clsGridMainInput" columns="2" style="background-color: bisque">
                <h:outputLabel styleClass="clsLabel" value="Old Password:"/>
                <h:inputSecret styleClass="clsInput" id="isecOldUserPassword" value="#{userDetail.oldUserPassword}" redisplay="true">
                </h:inputSecret>

                <h:outputLabel styleClass="clsLabel" value="New Password:" title="New password MUST be between 5-to-20 characters"/>
                <h:inputSecret styleClass="clsInput" id="isecNewUserPassword" value="#{userDetail.newUserPassword}" redisplay="true">
                </h:inputSecret>
                
                <h:outputLabel styleClass="clsLabel" value="Confirm New Password:" title="Re-enter new password to confirm"/>
                <h:inputSecret styleClass="clsInput" id="isecNewUserPasswordConfirm" value="#{userDetail.newUserPasswordConfirm}" redisplay="true">
                </h:inputSecret>
                
                <h:commandButton styleClass="clsButton1" id="cmdbChangePassword" value="Change Password">
                    <f:actionListener binding="#{userDetailBean.changePassword(userDetail)}" />
                </h:commandButton>
            </h:panelGrid>

            <h:panelGrid styleClass="clsGridMainMessages" columns="1">
                <h:outputLabel styleClass="clsActionMessage" id="olblActionMessage" value="#{userDetailBean.actionMessage}"/>
                <h:messages id="msgsMainMessage" style="color: red"/><br/>
            </h:panelGrid>
            

            

        </h:form>
    </h:body>
</html>

